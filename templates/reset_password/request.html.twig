{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.request.title' | trans }}{% endblock %}

{% block body %}
    <div class="container reset_password_form">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="text-center pt-3">
            <h1>{{ 'reset_password.request.title' | trans }}</h1>
        </div>
        {{ form_start(requestForm) }}
            {{ form_widget(requestForm.email) }}

        <div class="text-center">
            <small>
                {{ 'reset_password.request.help' | trans }}
            </small>
        </div>

        <button class="btn btn-primary w-100 mt-3">{{ 'reset_password.request.send_email' | trans }}</button>
        {{ form_end(requestForm) }}
    </div>

{% endblock %}