    <!-----  PAGINATION  ----->
    <div class="container class pt-3">
        {% include '/posts/pagination.html.twig' with {'curPage': curPage} %}
    </div>



    <!-----              ----->
    <!-----    POSTS     ----->
    <!-----              ----->
    <div class="container post mx-auto">

        <div class="container-fluid">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="">
                        <!-- button for creating a new post -->
                        {% if app.user %}
                            <div class=" pt-4">
                                <a href="{{ path('new_blog_post') }}">
                                    <button class="btn btn-outline-info">
                                        {{ 'posts.main_page.create_new_post' | trans }}
                                    </button>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                    <div class="">
                        <div class="btn-group pt-4">
                            <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                {{ 'posts.main_page.sort_by.sort_by' | trans }}
                            </button>
                            <!-- button to select the order of display of posts -->
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path(currentRoute, {'page': currentPage, 'display_order': 'username'})  }}">{{ 'posts.main_page.sort_by.username' | trans }}</a>
                                <a class="dropdown-item" href="{{ path(currentRoute, {'page': currentPage, 'display_order': 'email'})  }}">{{ 'posts.main_page.sort_by.email' | trans }}</a>
                                <a class="dropdown-item" href="{{ path(currentRoute, {'page': currentPage, 'display_order': 'new'})  }}">{{ 'posts.main_page.sort_by.first_new' | trans }}</a>
                                <a class="dropdown-item" href="{{ path(currentRoute, {'page': currentPage, 'display_order': 'old'})  }}">{{ 'posts.main_page.sort_by.first_old' | trans }}</a>
                            </div>  <!-- /.dropdown-menu -->
                        </div>  <!-- /.btn-group -->
                    </div>
                </div>
            </div>
        </div>









        {% for post in posts %}
            {% if post %}
                <br>
                <div class="mx-2 mt-2">
                    <h3><a href="{{ path('blog_show', {'slug': post.slug, 'page': currentPage}) }}">{{ post.text  | slice(0, 30) ~ '...' }}</a></h3>
                </div>
                {% if post.image %}
                    <div class="m-2">
                        <img src="{{ asset('uploads/images/blog_images/' ~ post.image) }}" class="w-75">
                    </div>
                {% endif %}
                <div class="text mx-2">
                    {{ post.text }}
                </div>
                <div class="m-2">
                    <a href="{{ path('blog_show', {'slug': post.slug, 'page': currentPage}) }}">
                        <button class="btn btn-dark">
                            {{ 'posts.main_page.read_more' | trans }}
                        </button>
                    </a>
                </div>
                <div class="dropdown-divider my-2" style="border-color: darkgrey;"></div>
                <span class="mx-2">{{ post.createdAtString }}</span>
                <span class="mx-2">{{ 'posts.main_page.by' | trans }} {{ post.username }}</span>
                <span class="mx-2">{{ post.email }}</span>
                <div class="dropdown-divider my-2" style="border-color: darkgrey;"></div>
                <br>
            {% endif %}
        {% endfor %}
    </div>  <!-- / .container post -->
    <!-----              ----->
    <!-----  END POSTS   ----->
    <!-----              ----->

    <!-----  PAGINATION  ----->
    <div class="container class pt-3">
        {% include '/posts/pagination.html.twig' with {'curPage': curPage} %}
    </div>

