<nav aria-label="Posts">
    <ul class="pagination pagination-flat justify-content-center">
        {% if curPage == 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">First</a></li>
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 2, 'q': currentQueryParams}) }}">2</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 3, 'q': currentQueryParams}) }}">3</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 4, 'q': currentQueryParams}) }}">4</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 5, 'q': currentQueryParams}) }}">5</a></li>
            <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 2, 'q': currentQueryParams}) }}" aria-label="Next">
                <span aria-hidden="true">>></span>
                <span class="sr-only">Next</span>
            </a>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': numPages, 'q': currentQueryParams}) }}">Last</a></li>

        {% elseif curPage == 2%}
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 1, 'q': currentQueryParams}) }}">First</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 1, 'q': currentQueryParams}) }}" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 1, 'q': currentQueryParams}) }}">1</a></li>
            <li class="page-item active"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 3, 'q': currentQueryParams}) }}">3</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 4, 'q': currentQueryParams}) }}">4</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 5, 'q': currentQueryParams}) }}">5</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 3, 'q': currentQueryParams}) }}" aria-label="Next">
                    <span aria-hidden="true">>></span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': numPages, 'q': currentQueryParams}) }}">Last</a></li>


        {% elseif curPage >= 3 %}
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': 1, 'q': currentQueryParams}) }}">First</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage - 1, 'q': currentQueryParams}) }}" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage - 1, 'q': currentQueryParams}) }}">{{ curPage - 2 }}</a></li>
            <li class="page-item "><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage - 1, 'q': currentQueryParams}) }}">{{ curPage - 1 }}</a></li>
            <li class="page-item active "><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage, 'q': currentQueryParams}) }}">{{ curPage }}</a></li>
            {% if curPage + 2 <= numPages %}
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 1, 'q': currentQueryParams}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 2, 'q': currentQueryParams}) }}">{{ curPage + 2 }}</a></li>
                <li class="page-item">
                    <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 1, 'q': currentQueryParams}) }}" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': numPages, 'q': currentQueryParams}) }}">Last</a></li>
            {% elseif curPage + 1 == numPages %}
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 1, 'q': currentQueryParams}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">{{ curPage + 2 }}</a></li>
                <li class="page-item">
                    <a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 1, 'q': currentQueryParams}) }}" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': numPages, 'q': currentQueryParams}) }}">Last</a></li>
            {% elseif curPage == numPages %}
                <li class="page-item disabled"><a class="page-link" href="{{ path(currentRoute, {'_locale':'en', 'page': curPage + 1, 'q': currentQueryParams}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">{{ curPage + 2 }}</a></li>
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item disabled"><a class="page-link" href="#">Last</a></li>
            {% endif %}
        {% endif %}
    </ul>
</nav>
