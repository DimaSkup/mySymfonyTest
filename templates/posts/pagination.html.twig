<nav aria-label="Posts">
    <ul class="pagination pagination-flat justify-content-center">
        {% if curPage == 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">{{ 'posts.pagination.first_pg_button' | trans}}</a></li>
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 2}) }}">2</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 3}) }}">3</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 4}) }}">4</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 5}) }}">5</a></li>
            <a class="page-link" href="{{ path(currentRoute, {'page': 2}) }}" aria-label="Next">
                <span aria-hidden="true">>></span>
                <span class="sr-only">Next</span>
            </a>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': numPages}) }}">{{ 'posts.pagination.last_pg_button' | trans}}</a></li>

        {% elseif curPage == 2%}
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 1}) }}">{{ 'posts.pagination.first_pg_button' | trans}}</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'page': 1}) }}" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 1}) }}">1</a></li>
            <li class="page-item active"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, { 'page': 3}) }}">3</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 4}) }}">4</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 5}) }}">5</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'page': 3}) }}" aria-label="Next">
                    <span aria-hidden="true">>></span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': numPages}) }}">{{ 'posts.pagination.last_pg_button' | trans}}</a></li>


        {% elseif curPage >= 3 %}
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': 1}) }}">{{ 'posts.pagination.first_pg_button' | trans}}</a></li>
            <li class="page-item">
                <a class="page-link" href="{{ path(currentRoute, {'page': curPage - 1}) }}" aria-label="previous">
                    <span aria-hidden="true"><<</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': curPage - 1}) }}">{{ curPage - 2 }}</a></li>
            <li class="page-item "><a class="page-link" href="{{ path(currentRoute, {'page': curPage - 1}) }}">{{ curPage - 1 }}</a></li>
            <li class="page-item active "><a class="page-link" href="{{ path(currentRoute, {'page': curPage}) }}">{{ curPage }}</a></li>
            {% if curPage + 2 <= numPages %}
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': curPage + 1}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': curPage + 2}) }}">{{ curPage + 2 }}</a></li>
                <li class="page-item">
                    <a class="page-link" href="{{ path(currentRoute, {'page': curPage + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': numPages}) }}">{{ 'posts.pagination.last_pg_button' | trans}}</a></li>
            {% elseif curPage + 1 == numPages %}
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': curPage + 1}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">{{ curPage + 2 }}</a></li>
                <li class="page-item">
                    <a class="page-link" href="{{ path(currentRoute, {'page': curPage + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="{{ path(currentRoute, {'page': numPages}) }}">{{ 'posts.pagination.last_pg_button' | trans}}</a></li>
            {% elseif curPage == numPages %}
                <li class="page-item disabled"><a class="page-link" href="{{ path(currentRoute, {'page': curPage + 1}) }}">{{ curPage + 1 }}</a></li>
                <li class="page-item disabled"><a class="page-link" href="#">{{ curPage + 2 }}</a></li>
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">>></span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item disabled"><a class="page-link" href="#">{{ 'posts.pagination.last_pg_button' | trans}}</a></li>
            {% endif %}
        {% endif %}
    </ul>
</nav>
