{% extends 'base.html.twig' %}

{% block title %}{{ post.text  | slice(0, 10)}}{% endblock %}

{% block body %}
    <div class="container post_show my-3 mx-auto ">
        <div class="pt-4">
            {{ post.text }}
        </div>
        {% if post.image %}
            <div class="m-auto">
                <img src="{{ asset('uploads/images/' ~ post.image) }}">
            </div>
        {% endif %}

        {% if app.user %}
            {% if postIsByCurrentUser %}
                <div class="my-2">
                    <a href="{{ path('blog_post_edit', {'slug': post.slug}) }}">
                        <button class="btn btn-outline-success mr-2">
                            {{ 'posts.show_single_post.edit' | trans }}
                        </button>
                    </a>
                    <a href="{{ path('blog_post_delete', {'slug': post.slug}) }}">
                        <button class="btn btn-outline-danger">
                            {{ 'posts.show_single_post.delete' | trans }}
                        </button>
                    </a>
                </div>
            {% endif %}
        {% endif %}
        <div class="my-2">
            <a href="{{ path('blog_posts') }}">
                <button class="btn btn-light back_button">
                    {{ 'posts.show_single_post.back' | trans }}
                </button>
            </a>
        </div>
    </div>
{% endblock %}
